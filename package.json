{
    "name": "tirith",
    "private": true,
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "start": "cross-env NODE_ENV=production npm run start:prod --workspace=tirith-api",
        "start:dev": "npm run dev",
        "dev": "npx cross-env NODE_ENV=development concurrently --names ng,nest --kill-others \"npm run start:dev --workspace=tirith-frontend\" \"npm run start:dev --workspace=tirith-api\"",
        "build": "npm run build --workspace=tirith-api && npm run build --workspace=tirith-frontend",
        "test": "npm run test --workspace=tirith-api && npm run test --workspace=client",
        "test:ci": "concurrently --max-processes=1 --raw --success=all \"npm run test:ci --workspace=tirith-api\" ",
        "ng": "npx --workspace=tirith-frontend ng",
        "nest": "npx --workspace=tirith-api nest",
        "generate:protos": "npx protoc --plugin=protoc-gen-ts_proto=\".\\node_modules\\.bin\\protoc-gen-ts_proto.cmd\" --ts_proto_out=./tirith-api/src/services/grpc --ts_proto_opt=\"outputServices=nice-grpc,outputServices=generic-definitions,useExactTypes=false\" --proto_path=\"C:/Users/User/RiderProjects/Valmar/Valmar/Protos\" C:/Users/User/RiderProjects/Valmar/Valmar/Protos/*.proto"
    },
    "devDependencies": {
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "nodemon": "^2.0.15",
        "prettier": "^2.3.2"
    },
    "workspaces": [
        "tirith-api",
        "tirith-frontend",
        "palantir-db"
    ],
    "dependencies": {
        "nice-grpc": "^2.1.7",
        "palantir-db": "^1.0.7",
        "ts-proto": "^1.165.2"
    }
}